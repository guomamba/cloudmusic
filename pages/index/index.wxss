.top{
  padding: 0rpx;
  background-color: #666666;
}
.top_scroll{
  white-space: nowrap;
  padding: 0rpx;
}
.scroll_item{
  width: 150rpx; 
  padding: 20rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  display: inline-block;
}
.scroll_item.active{
  border-bottom: 5rpx solid #C20C0C;
}

/* 音乐列表 */
.musiclist{
  padding: 0rpx;
  background-color: #131313;
}
.musiclist_item{
  display: flex;
  justify-content: space-between;
}
.item_music{
  display: flex;
  justify-content: center;
  align-items: center;
}
.item_music image{
  width: 80rpx;
  margin: 20rpx;
  margin-left: 35rpx;
  border-radius: 10%;
}
.item_info{
  width: 630rpx;
  height: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.item_name{
  height: 60%;
  font-size: 36rpx;
  color: #fff;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.item_artists{
  height: 40%;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.item_artist{
  font-size: 25rpx;
  color: #888888;
}
.playlist{
  display: flex;
  flex-flow: row wrap;
  background-color: #44352E;
  padding: 15rpx;
}
.playlist_item{
  height: 320rpx;
  width: 240rpx;
}
.playlist_itemInfo{
  display: flex;
  flex-direction: column;
}
.playlist_itemInfo_img{
  width: 220rpx;
  padding: 15rpx;
  padding-bottom: 5rpx;
}
.playlist_itemInfo_img image{
  width: 220rpx;
  height: 230rpx;
  border-radius: 10rpx;
  position: relative;
}
.playlist_itemInfo_img image text{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  font-size: 25rpx;
  color: #fff;
  text-align: right;
}
.playlist_itemInfo_title{
  font-size: 25rpx;
  padding-left: 15rpx;
  color: #fff;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.alllist{
  display: flex;
  flex-flow: row wrap;
  background-color: #000000;
  padding: 15rpx;
}
.alllist_item{
  height: 320rpx;
  width: 240rpx;
}
.alllist_itemInfo{
  display: flex;
  flex-direction: column;
}
.alllist_itemInfo_img{
  width: 220rpx;
  padding: 15rpx;
  padding-bottom: 5rpx;
}
.alllist_itemInfo_img image{
  width: 220rpx;
  height: 230rpx;
  border-radius: 10rpx;
  position: relative;
}
.alllist_itemInfo_img image text{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin-top: 180rpx;
  margin-left: 15rpx;
  font-size: 25rpx;
  color: #fff;
}
.alllist_itemInfo_title{
  font-size: 25rpx;
  padding-left: 15rpx;
  color: #fff;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.artist{
  background-color: #151515;
}
.artist_title{
  height: 50rpx;
  background-color: #2C2C2C;
}
.artist_title text{
  font-size: 26rpx;
  color: #CACACA;
  margin: 12rpx;
  margin-left: 30rpx;
}
.artist_list{
  display: flex;
  flex-flow: row wrap;
}
.artist_item{
  height: 150rpx;
  width: 375rpx;
}
.artist_itemInfo{
  display: flex;
  flex-direction: row;
}
.artist_itemInfo image{
  width: 120rpx;
  margin: 15rpx; 
  margin-left: 30rpx;
  border-radius: 50%;
}
.artist_itemInfo text{
  width: 255rpx;
  font-size: 30rpx;
  text-align: left center;
  color: #fff;
  margin-top: 50rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.hotdj{
  background-color: #151515;
}
.hotdj_item{
  height: 240rpx;
}
.hotdj_itemInfo{
  display: flex;
  flex-direction: row;
}
.hotdj_itemInfo image{
  width: 210rpx;
  margin: 10rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
}
.hotdj_itemInfo_detail{
  margin-left: 20rpx;
  width: 470rpx;
  display: flex;
  flex-direction: column;
}
.detail_name{
  font-size: 30rpx;
  color: #fff;
  margin-top: 40rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.detail_rcmdtext{
  font-size: 24rpx;
  color: #AAAAAA;
  margin-top: 30rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.detail_subCount{
  font-size: 24rpx;
  color: #AAAAAA;
  margin-top: 20rpx;
}
